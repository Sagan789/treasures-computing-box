<!DOCTYPE html>
<html lang="en">
<head>
    {% block header %}
        <title>Treasures</title>
        <meta http-equiv="content-type" charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="laurent-pernot">
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"/>
        <link href="https://fonts.googleapis.com/css?family=Orbitron" rel="stylesheet">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('/css/bootstrap.css') }}" />
        <link rel="stylesheet" href="{{ asset('/css/styles.css') }}" />
    {% endblock %}
    {% block javascripts %}
        <script type="text/javascript" src="{{ asset('/js/jquery.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('/js/jquery-ui.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('/js/bootstrap.js') }}"></script>
    {% endblock %}
    {% endblock %}
</head>
<body>
<!-- Fixed navbar -->
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('home') }}">Treasures</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="active"><a href="{{ path('home') }}">Home</a></li>
                <li><a href="{{ path('clock_world') }}">Meeting Time Converter</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Maths <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('timetables') }}">Time Tables</a></li>
                        <li><a href="{{ path('pi_leibniz') }}">Pi Calculation</a></li>

                    </ul>
                </li>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>
{% block body %}
<div class="container">
    {% for msg in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ msg }}
        </div>
    {% endfor %}
    {% block content %}{% endblock %}
</div>
{% endblock %}
{% block footer %}{% endblock %}
</body>
</html>